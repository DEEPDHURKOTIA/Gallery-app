<div class="container">
  <div class="row mt-3">
    <%@album.images.each do |image|%>
      <div class="col-md-4">
        <div class="card mt-5" style="width: 18rem;">
          <%=link_to image, target:"_blank" do%>
            <%= image_tag(image , class:"img-fluid")%>
              <div>
                <%= button_to "Destroy", purge_image_path(album_id: @album.id,attachment_id: image.id),method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  },class:"btn btn-danger ms-1 mt-2" %>
              </div>
          <%end%>
        </div> 
      </div>
    <%end%>
  </div>
</div>