<div class="mt-3 d-flex justify-content-center container text-success">
<h2>Forgot your password?</h2>
</div>
<div class=" d-flex justify-content-center container text-success">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-with">
    <%= f.label :email,class:"text-warning ms-2 mt-2" %><br />
    <%= f.email_field :email,class:"form-control w-auto text-info", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions",class:"bg-white border-0 text-info text-decoration-underline" %>
  </div>
<% end %>
</div>
<div class="mt-3 d-flex justify-content-center container">
<%= render "devise/shared/links" %>
