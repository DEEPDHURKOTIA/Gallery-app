          <ul class=" nav navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item"><%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link text-white fw-bolder btn btn-danger" %></li>
