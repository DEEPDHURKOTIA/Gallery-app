<div class="mt-3 d-flex justify-content-center container text-success">
<h2>Log In to Gallery</h2>
</div>
<div class="d-flex justify-content-center container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-with">
    <%= f.label :email, class:"ms-2 mt-1 text-warning"%><br>
    <%= f.email_field :email,class:"form-control w-auto text-info", autofocus: true, autocomplete: "email",placeholder:"Enter @gmail.com" %>
  </div>

  <div class="form-with">
    <%= f.label :password, class:"ms-2 mt-3 text-warning" %><br>
    <%= f.password_field :password,class:"form-control w-auto text-info", autocomplete: "current-password",placeholder:"Enter password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class=" mt-3 text-warning">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="container mt-3 d-flex justify-content-center fs-5">
    <%= f.submit "Log in",class:"text-white border-0 bg-success"%>
  </div>
<% end %>
</div>
<div class="mt-3 d-flex justify-content-center container">
<%= render "devise/shared/links" %>
</div>